<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="400"
		MaxWidth="1000" MaxHeight="400"
		WindowState="Normal"
        x:Class="StudentProfileSystem.AddAdnRedactOlympGia"
		x:CompileBindings="False"
        Title="">

	<Grid ShowGridLines="False"
		  Name="OkkoRedactAdd"
		  ColumnDefinitions="0.2*,*,*,0.2*"
		  RowDefinitions="0.2*,*,0.2*">

		<Border Grid.Column="1"
				Grid.Row="1"
				Grid.RowSpan="1"
				Grid.ColumnSpan="2"
				IsVisible="False"
				BorderThickness="2"
				BorderBrush="Gray"
				CornerRadius="20"
				Name="BorderRedactSchool">

			<Grid ShowGridLines="False"
				  ColumnDefinitions="*,2*"
				  RowDefinitions="*,*,*,*,*,*,*,*">

				<TextBlock Text="Школа:"
						   Grid.Row="1"
						   Margin="0 0 5 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"/>

				<TextBox Text="{Binding Name}"
						 Name="School"
						 Grid.Column="1"
						 Grid.Row="1"
						 Margin="5 0 0 0"
						 Width="500"
						 MaxLength="50"
						 CornerRadius="10"
						 HorizontalAlignment="Left"
						 VerticalAlignment="Center"/>

				<TextBlock Text="Номер Школы:"
						   Grid.Row="2"
						   Margin="0 0 5 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"/>

				<TextBox Text="{Binding SchoolNumber}"
						 Name="SchoolNumber"
						 Grid.Column="1"
						 Grid.Row="2"
						 Margin="5 0 0 0"
						 Width="500"
						 MaxLength="50"
						 CornerRadius="10"
						 HorizontalAlignment="Left"
						 VerticalAlignment="Center"/>

				<TextBlock Text="Район Школы:"
						   Grid.Row="3"
						   Margin="0 0 5 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"/>

				<TextBox Text="{Binding District}"
						 Name="District"
						 Grid.Column="1"
						 Grid.Row="3"
						 Margin="5 0 0 0"
						 Width="500"
						 MaxLength="50"
						 CornerRadius="10"
						 HorizontalAlignment="Left"
						 VerticalAlignment="Center"/>

				<TextBlock Text="Город Школы:"
						   Grid.Row="4"
						   Margin="0 0 5 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"/>

				<TextBox Text="{Binding City}"
						 Name="City"
						 Grid.Column="1"
						 Grid.Row="4"
						 Margin="5 0 0 0"
						 Width="500"
						 MaxLength="50"
						 CornerRadius="10"
						 HorizontalAlignment="Left"
						 VerticalAlignment="Center"/>

			</Grid>
			
		</Border>

		<Border Grid.Column="1"
				Grid.Row="1"
				Grid.RowSpan="1"
				Grid.ColumnSpan="2"
				IsVisible="False"
				BorderThickness="2"
				BorderBrush="Gray"
				CornerRadius="20"
				Name="BorderRedactClass">

			<Grid ShowGridLines="False"
				  ColumnDefinitions="*,2*"
				  RowDefinitions="*,*,*,*,*,*,*,*">

				<TextBlock Text="Класс:"
						   Grid.Row="1"
						   Margin="0 0 5 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"/>

				<TextBox Text="{Binding ClassesNumber}"
						 Name="ClassesNumber"
						 Grid.Column="1"
						 Grid.Row="1"
						 Margin="5 0 0 0"
						 Width="50"
						 MaxLength="4"
						 CornerRadius="10"
						 HorizontalAlignment="Left"
						 VerticalAlignment="Center"/>
			</Grid>

		</Border>

		<DockPanel HorizontalAlignment="Left"
				   VerticalAlignment="Center"
				   Grid.ColumnSpan="2"
				   Grid.Column="0"
				   Grid.Row="2"
				   Margin="10 0 0 0">

			<Button Name="Save_Button"
					Click="Button_Click_Save">
				<TextBlock Text="Сохранить"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

			<Button Name="Exit"
					Margin="5 0 0 0"
					Click="Button_Click_Close">
				<TextBlock Text="Закрыть"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

		</DockPanel>

		<Border Grid.Column="1"
				Grid.Row="1"
				Grid.RowSpan="1"
				Grid.ColumnSpan="2"
				IsVisible="False"
				BorderThickness="2"
				BorderBrush="Gray"
				CornerRadius="20"
				Name="BorderOlympiad">

			<Grid ShowGridLines="False"
				  ColumnDefinitions="*,2*"
				  RowDefinitions="*,*,*,*,*,*,*,*">

				<TextBlock Text="Олимпиада:"
						   Grid.Row="1"
						   Margin="0 0 5 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"/>

				<ComboBox Name="Box_Olympiad"
						  Grid.Row="1"
						  Grid.Column="1"
						  Margin="5 0 0 0"
						  MinWidth="150">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>

				<TextBlock Text="Предмет олимпиады:"
						   Grid.Row="2"
						   Margin="0 0 5 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"/>

				<ComboBox Name="Box_Type_Olympiad"
						  Grid.Row="2"
						  Height="3"
						  Grid.Column="1"
						  Margin="5 0 0 0"
						  MinWidth="150">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>

			</Grid>

		</Border>		

		<Border Grid.Column="1"
				Grid.Row="1"
				Grid.RowSpan="1"
				Grid.ColumnSpan="2"
				IsVisible="False"
				BorderThickness="2"
				BorderBrush="Gray"
				CornerRadius="20"
				Name="BorderGiaSubject">

			<Grid ShowGridLines="False"
				  ColumnDefinitions="*,2*"
				  RowDefinitions="*,*,*,*,*,*,*,*">

				<TextBlock Text="Предмет:"
						   Grid.Row="1"
						   Margin="0 0 5 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"/>

				<ComboBox Name="Box_GiaSubject"
						  Grid.Row="1"
						  Grid.Column="1"
						  Margin="5 0 0 0"
						  MinWidth="150">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>

				<TextBlock Text="Тип ГИА:"
						   Grid.Row="2"
						   Margin="0 0 5 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"/>

				<ComboBox Name="Box_Type_GiaSubject"
						  Grid.Row="2"
						  Height="3"
						  Grid.Column="1"
						  Margin="5 0 0 0"
						  MinWidth="150">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
				
			</Grid>

		</Border>

		<Border Grid.Column="1"
				Grid.Row="1"
				Grid.RowSpan="1"
				Grid.ColumnSpan="2"
				IsVisible="False"
				BorderThickness="2"
				BorderBrush="Gray"
				CornerRadius="20"
				Name="BorderGiaRedAdd">

			<Grid ShowGridLines="False"
				  ColumnDefinitions="*,2*"
				  RowDefinitions="*,*,*,*,*,*,*,*,*">

				<TextBlock Text="Предмет:"
						   Grid.Row="1"
						   Margin="0 0 5 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"/>

				<TextBox Text="{Binding Name}"
						 Name="NameGia"
						 Grid.Column="1"
						 Grid.Row="1"
						 Margin="5 0 0 0"
						 Width="500"
						 MaxLength="50"
						 CornerRadius="10"
						 HorizontalAlignment="Left"
						 VerticalAlignment="Center"/>

			</Grid>
		</Border>

		<Border Grid.Column="1"
				Grid.Row="1"
				Grid.RowSpan="1"
				Grid.ColumnSpan="2"
				IsVisible="False"
				BorderThickness="2"
				BorderBrush="Gray"
				CornerRadius="20"
				Name="BorderOlympRedAdd">

			<Grid ShowGridLines="False"
				  ColumnDefinitions="*,2*"
				  RowDefinitions="*,*,*,*,*,*,*,*,*">
				
				<TextBlock Text="Олимпиада:"
						   Grid.Row="1"
						   Margin="0 0 5 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"/>
				
				<TextBox Text="{Binding Name}"
						 Name="NameOlymp"
						 Grid.Column="1"
						 Grid.Row="1"
						 Margin="5 0 0 0"
						 Width="500"
						 CornerRadius="10"
						 HorizontalAlignment="Left"
						 VerticalAlignment="Center"/>
				
			</Grid>			
		</Border>

	</Grid>
</Window>
