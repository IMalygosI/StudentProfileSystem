<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1350" d:DesignHeight="750"
		MaxWidth="1350" MaxHeight="750"
		MinWidth="1350" MinHeight="750"
		WindowState="Normal"
		xmlns:converters="clr-namespace:StudentProfileSystem.Converters"
		x:CompileBindings="False"
        x:Class="StudentProfileSystem.StudentEditWindow"
        Title="">

	<Window.Resources>
		<converters:NotZeroConverter x:Key="NotZeroConverter"/>
	</Window.Resources>

	<Grid ShowGridLines="False"
		  Name="OkkoRedactAndAdd"
		  Background="#4DA6B0"
		  ColumnDefinitions="0.1*,*,*,*,*,0.1*"
		  RowDefinitions="0.1*,*,0.4*,*,0.2*">

		<DockPanel HorizontalAlignment="Right"
				   VerticalAlignment="Center"
				   Margin="0 0 0 0"
				   Grid.Column="2"
				   Grid.Row="4">

			<Button Click="Button_Click_Redact_School">
				<TextBlock Text="Школы"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

			<Button Margin="5 0 0 0"
					Click="Button_Click_Redact_Class">
				<TextBlock Text='Классы'
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

		</DockPanel>

		<DockPanel HorizontalAlignment="Left"
				   VerticalAlignment="Bottom"
				   Margin="0 0 0 10"
				   Grid.Column="1"
				   Grid.Row="3"
				   Grid.RowSpan="2">

			<Button Name="Save"
					Click="Button_Click_Save">
				<TextBlock Text="Сохранить"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

			<Button Name="Exit"
					Margin="5 0 0 0"
					Click="Button_Click_Close">
				<TextBlock Text="Закрыть"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

		</DockPanel>

		<Border BorderThickness="2"
				BorderBrush="Gray"
				Grid.Column="3"
				Grid.Row="1"
				Background="#D4F5F7"
				Grid.ColumnSpan="2"
				Grid.RowSpan="5"
				Margin="10 0 0 10"
				CornerRadius="10">

			<Grid ShowGridLines="False"
				  ColumnDefinitions="*,4*"
				  RowDefinitions="*,*">

				<Grid ShowGridLines="False"
					  Grid.ColumnSpan="2"
					  Grid.Row="0"
					  ColumnDefinitions="*,4*"
					  RowDefinitions="0.16*,0.15*,0.1*,*">

					<TextBlock Text="Олимпиады:"
							   Grid.Column="0"
							   Grid.Row="0"
							   FontWeight="Bold"
							   HorizontalAlignment="Right"
							   VerticalAlignment="Center"
							   Margin="0 0 5 0"/>

					<TextBlock Text="Олимпиады:"
							   FontWeight="Bold"
							   Grid.Column="0"
							   Grid.Row="2"
							   HorizontalAlignment="Right"
							   VerticalAlignment="Center"
							   Margin="0 0 5 0"/>

					<ComboBox Grid.Column="1"
							  Grid.Row="0"
							  MinWidth="490"
							  MaxWidth="490"
							  HorizontalAlignment="Right"
							  VerticalAlignment="Center"
							  Margin="5 0 10 0"
							  Name="ComboBox_Olympiad">

						<ComboBox.ItemTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="{Binding OlympiadsNavigation.Name}"/>
									<TextBlock Text="-"
											   Margin="1 0 1 0"/>
									<TextBlock Text="{Binding OlympiadsItemsNavigation.Name}"
											   Margin="5 0 0 0"/>
								</StackPanel>
							</DataTemplate>
						</ComboBox.ItemTemplate>
					</ComboBox>

					<DockPanel Grid.Column="1"
							   Grid.Row="1"
							   Margin="0 0 10 0"
							   HorizontalAlignment="Right"
							   VerticalAlignment="Center">

						<Button Click="Button_AddOlympiad_Click"
								Margin="0 0 0 0">
							<TextBlock Text="Добавить"/>
						</Button>

						<Button Click="Button_RemoveOlympiad_Click"
								Margin="5 0 0 0">
							<TextBlock Text="Удалить"/>
						</Button>

					</DockPanel>

					<ListBox Grid.Column="0"
							 Grid.Row="3"
							 Grid.ColumnSpan="2"
							 Name="ListBox_Olympiads"
							 Margin="10 0 10 5"
							 CornerRadius="5"
							 BorderThickness="2"
							 BorderBrush="Gray">

						<ListBox.ItemTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									
									<TextBlock Text="{Binding OlympiadsNavigation.Name}" Margin="0,0,5,0"/>

									<TextBlock Text="-"
											   Margin="1 0 1 0"/>
									
									<TextBlock Text="{Binding OlympiadsItemsNavigation.Name}"
											   Margin="5 0 0 0"/>									
									
								</StackPanel>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>

				</Grid>

				<Border Grid.ColumnSpan="2"
						Grid.Row="1"
						BorderBrush="Gray"
						BorderThickness="0 2 0 0">

					<Grid ShowGridLines="False"
						  ColumnDefinitions="*,*"
						  RowDefinitions="*">

						<Border Grid.Row="1"
								Grid.Column="0"
								Margin="10 10 5 10"
								CornerRadius="10"
								BorderThickness="2"
								BorderBrush="Gray">
						
						<Grid ShowGridLines="False"
							  Margin="10"
							  Name="Gia_IsvisibleDan"
							  IsVisible="True"
							  ColumnDefinitions="*,4*"
							  RowDefinitions="0.17*,0.15*,0.08*,*">

							<TextBlock Text="ГИА:"
									   FontWeight="Bold"
									   Grid.Column="0"
									   Grid.Row="0"
									   HorizontalAlignment="Left"
									   VerticalAlignment="Center"
									   Margin="5 0 0 0"/>

							<ComboBox Grid.Column="1"
									  Grid.Row="0"
									  MinWidth="220"
									  MaxWidth="220"
									  VerticalAlignment="Center"
									  HorizontalAlignment="Left"
									  Margin="5 0 0 0"
									  Name="ComboBox_Gia">

								<ComboBox.ItemTemplate>
									<DataTemplate>
										<StackPanel Orientation="Horizontal">
											<TextBlock Text="{Binding GiaSubjectsNavigation.Name}"/>
											<TextBlock Text="-"
													   Margin="1 0 1 0"/>
											<TextBlock Text="{Binding GiaType.Name}"
													   Margin="5 0 0 0"/>
										</StackPanel>
									</DataTemplate>
								</ComboBox.ItemTemplate>
							</ComboBox>

							<DockPanel Grid.Column="0"
									   Grid.ColumnSpan="2"
									   Grid.Row="1"
									   VerticalAlignment="Center"
									   HorizontalAlignment="Right">

								<Button Click="Button_AddGia_Click"
										Margin="0 0 0 0">
									<TextBlock Text="Добавить"/>
								</Button>

								<Button Click="Button_RemoveGia_Click"
										Margin="5 0 0 0">
									<TextBlock Text="Удалить"/>
								</Button>

							</DockPanel>

							<TextBlock Text="ГИА"
									   FontWeight="Bold"
									   Grid.ColumnSpan="2"
									   Grid.Column="0"
									   Grid.Row="2"
									   Margin="5 0 0 0"
									   HorizontalAlignment="Left"
									   VerticalAlignment="Center"/>

							<ListBox Grid.Column="0"
									 Grid.ColumnSpan="2"
									 Grid.Row="3"
									 Name="ListBox_Gias"
									 BorderThickness="2"
									 CornerRadius="5"
									 BorderBrush="Gray">

								<ListBox.ItemTemplate>
									<DataTemplate>
										<StackPanel Orientation="Horizontal">
											<TextBlock Text="{Binding GiaSubjectsNavigation.Name}"
													   Margin="0,0,5,0"/>

										</StackPanel>
									</DataTemplate>
								</ListBox.ItemTemplate>
							</ListBox>

						</Grid>

						</Border>

						<Border Grid.Row="1"
								Grid.Column="1"
								Margin="5 10 10 10"
								CornerRadius="10"
								BorderThickness="2"
								BorderBrush="Gray">

							<Grid ShowGridLines="False"
								  Margin="10"
								  ColumnDefinitions="*,4*"
								  RowDefinitions="0.17*,0.15*,0.08*,*">

								<TextBlock Text="Медаль:"
										   FontWeight="Bold"
										   Grid.Column="0"
										   Grid.Row="0"
										   Grid.ColumnSpan="2"
										   HorizontalAlignment="Left"
										   VerticalAlignment="Center"
										   Margin="5 0 0 0"/>

								<ComboBox Grid.Column="1"
										  Grid.Row="0"
										  MinWidth="200"
										  MaxWidth="200"
										  VerticalAlignment="Center"
										  HorizontalAlignment="Right"
										  Margin="5 0 5 0"
										  Name="ComboBox_">

									<ComboBox.ItemTemplate>
										<DataTemplate>
											<StackPanel Orientation="Horizontal">
												<TextBlock Text="{Binding }"/>
											</StackPanel>
										</DataTemplate>
									</ComboBox.ItemTemplate>
								</ComboBox>

								<DockPanel Grid.Column="0"
										   Grid.ColumnSpan="2"
										   Grid.Row="1"
										   VerticalAlignment="Center"
										   HorizontalAlignment="Right">

									<Button Click=""
											Margin="0 0 0 0">
										<TextBlock Text="Добавить"/>
									</Button>

									<Button Click=""
											Margin="5 0 0 0">
										<TextBlock Text="Удалить"/>
									</Button>

								</DockPanel>

								<TextBlock Text="Медали"
										   FontWeight="Bold"
										   Grid.ColumnSpan="2"
										   Grid.Column="0"
										   Grid.Row="2"
										   Margin="5 0 0 0"
										   HorizontalAlignment="Left"
										   VerticalAlignment="Center"/>

								<ListBox Grid.Column="0"
										 Grid.ColumnSpan="2"
										 Grid.Row="3"
										 Name="ListBox_"
										 CornerRadius="5"
										 BorderThickness="2"
										 BorderBrush="Gray">

									<ListBox.ItemTemplate>
										<DataTemplate>
											<StackPanel Orientation="Horizontal">
												<TextBlock Text="{Binding}"
														   Margin="0,0,5,0"/>

											</StackPanel>
										</DataTemplate>
									</ListBox.ItemTemplate>
								</ListBox>

							</Grid>

						</Border>

					</Grid>

				</Border>
			
			</Grid>

		</Border>

		<Border BorderThickness="2"
				BorderBrush="Gray"
				Grid.Column="1"
				Background="#D4F5F7"
				Grid.Row="1"
				Grid.ColumnSpan="2"
				Grid.RowSpan="2"
				Margin="0 0 0 10"
				CornerRadius="10">

			<Grid ShowGridLines="False"
				  ColumnDefinitions="*,2*"
				  RowDefinitions="*,*,*,*,*,*,*,*,*,*,*">

				<DockPanel Grid.Column="0"
						   Grid.Row="0"
						   Grid.ColumnSpan="2"
						   Margin="0 5 10 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center">
				
				<TextBlock Text="Фамилия:"
						   FontWeight="Bold"
						   VerticalAlignment="Center"
						   Margin="0 0 5 0"/>

				<TextBox MinWidth="350"
						 MaxWidth="350"
						 Grid.Column="1"
						 Grid.Row="0"
						 Margin="5 0 0 0"
						 VerticalAlignment="Center"
						 TextInput="TextBox_TextInput"
						 Watermark="Фамилия"
						 Name="LastName"
						 Text="{Binding LastName}"
						 CornerRadius="10"/>
					
				</DockPanel>

				<DockPanel Grid.Column="0"
						   Grid.Row="1"
						   Grid.ColumnSpan="2"
						   Margin="0 5 10 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center">

					<TextBlock Text="Имя:" 
							   FontWeight="Bold"
							   VerticalAlignment="Center"
							   Margin="0 0 5 0"/>

					<TextBox MinWidth="350"
							 MaxWidth="350"
							 VerticalAlignment="Center"
							 Margin="5 0 0 0"
							 TextInput="TextBox_TextInput"
							 CornerRadius="10"
							 Name="FirstName"
							 Text="{Binding FirstName}"
							 Watermark="Имя"/>

				</DockPanel>

				<DockPanel Grid.Column="0"
						   Grid.Row="2"
						   Grid.ColumnSpan="2"
						   Margin="0 5 10 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center">
				
				<TextBlock Text="Отчество:"
						   FontWeight="Bold"
						   VerticalAlignment="Center"
						   Margin="0 0 5 0"/>

				<TextBox MinWidth="350"
						 MaxWidth="350"
						 VerticalAlignment="Center"
						 Margin="5 0 0 0"
						 TextInput="TextBox_TextInput"
						 CornerRadius="10"
						 Name="Patronymic"
						 Text="{Binding Patronymic}"
						 Watermark="Отчество"/>
				
				</DockPanel>

				<DockPanel Grid.Column="0"
						   Grid.Row="3"
						   Grid.ColumnSpan="2"
						   Margin="0 5 10 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center">

					<TextBlock Text="Школа:"
							   FontWeight="Bold"
							   HorizontalAlignment="Right"
							   VerticalAlignment="Center"
							   Margin="0 0 5 0"/>

					<ComboBox MinWidth="350"
							  MaxWidth="350"
							  VerticalAlignment="Center"
							  Margin="5 0 0 0"
							  Name="ComboBox_School">
						<ComboBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding Name}"/>
							</DataTemplate>
						</ComboBox.ItemTemplate>
					</ComboBox>
					
				</DockPanel>

				<DockPanel Grid.Column="0"
						   Grid.Row="4"
						   Grid.ColumnSpan="2"
						   Margin="0 5 10 0"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center">

					<TextBlock Text="Класс:"
							   FontWeight="Bold"
							   VerticalAlignment="Center"
							   Margin="0 0 5 0"/>

					<ComboBox MinWidth="350"
							  MaxWidth="350"
							  VerticalAlignment="Center"
							  Margin="5 0 0 0"
							  Name="ComboBox_Class">
						
						<ComboBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding ClassesNumber}"/>
							</DataTemplate>
						</ComboBox.ItemTemplate>
					</ComboBox>

				</DockPanel>

				<StackPanel Grid.RowSpan="3"
							Grid.Column="0"
							Grid.Row="5"
							Grid.ColumnSpan="2"
							Margin="0 5 0 0">

					<DockPanel HorizontalAlignment="Right"
							   Margin="0 0 3 0">

						<TextBlock Text="Профиль:"
								   Margin="0 0 5 0"
								   Name="ProfileLabel"
								   FontWeight="Bold"
								   Grid.Column="0"
								   Grid.Row="5"
								   HorizontalAlignment="Right"
								   VerticalAlignment="Center"/>


						<ComboBox Grid.Column="1"
								  Grid.Row="5"
								  MinWidth="350"
								  MaxWidth="350"
								  VerticalAlignment="Center"
								  Margin="5 2 5 0"
								  Name="ComboBox_Profile">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Name}"/>
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>


					</DockPanel>

					<DockPanel HorizontalAlignment="Right"
							   Margin="0 0 3 0">

						<TextBlock Text="Учебное заведение:"
								   FontWeight="Bold"
								   Margin="0 0 5 0"
								   Name="EducationalInstitutionLabel"
								   HorizontalAlignment="Right"
								   VerticalAlignment="Center"/>

						<ComboBox Grid.Column="1"
								  Grid.Row="6"
								  MinWidth="350"
								  MaxWidth="350"
								  VerticalAlignment="Center"
								  Margin="5 5 5 0"
								  Name="ComboBox_EducationalInstitution">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Name}"/>
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>

					</DockPanel>

					<DockPanel HorizontalAlignment="Right"
							   Margin="0 0 3 0">

						<TextBlock Text="Наименование:"
								   FontWeight="Bold"
								   Margin="0 0 5 0"
								   Name="Name_Educational_Institution"
								   HorizontalAlignment="Right"
								   VerticalAlignment="Center"/>

						<TextBox Text="{Binding NameEducationalInstitution}"
								 Name="NameEducationalInstitution"
								 Watermark="Наименование учебного заведения"
								 IsEnabled="{Binding SelectedItem.Id, ElementName=ComboBox_EducationalInstitution, Converter={StaticResource NotZeroConverter}}"
								 CornerRadius="10"
								 Margin="10 5 5 0"
								 MinWidth="350"
								 MaxWidth="350"
								 VerticalAlignment="Center"/>

					</DockPanel>

					<DockPanel HorizontalAlignment="Right"
							   Margin="0 0 3 0">

						<TextBlock Text="Образование:"
								   Name="EducationLabel"
								   FontWeight="Bold"
								   Grid.Column="0"
								   Grid.Row="7"
								   HorizontalAlignment="Right"
								   VerticalAlignment="Center"
								   Margin="0 0 5 0"/>

						<ComboBox Grid.Column="1"
								  Grid.Row="7"
								  MinWidth="350"
								  MaxWidth="350"
								  VerticalAlignment="Center"
								  Margin="5 5 5 0"
								  Name="ComboBox_Education">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Name}"/>
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</DockPanel>

					<DockPanel HorizontalAlignment="Right"
							   Margin="0 0 3 0">

						<TextBlock Text="Наименование образования:"
								   FontWeight="Bold"
								   Margin="0 0 5 0"
								   Name="EducationNameLabel"
								   HorizontalAlignment="Right"
								   VerticalAlignment="Center"/>

						<TextBox Text="{Binding NameProfile, Mode=TwoWay}"
								 Name="EducationNameTextBox"
								 Watermark="Наименование образования"
								 IsEnabled="{Binding SelectedItem.Id, ElementName=ComboBox_Education, Converter={StaticResource NotZeroConverter}}"
								 CornerRadius="10"
								 Margin="10 5 5 0"
								 MinWidth="350"
								 MaxWidth="350"
								 VerticalAlignment="Center"/>
					</DockPanel>	
					
				</StackPanel>
				
			</Grid>
		</Border>

		<Border BorderThickness="2"
				BorderBrush="Gray"
				Background="#D4F5F7"
				Grid.Column="2"
				Grid.Row="3"
				Grid.ColumnSpan="1"
				Grid.RowSpan="1"
				Margin="5 0 0 0"
				CornerRadius="10">

			<DockPanel>

				<Grid RowDefinitions="0.5*,4*,0.7*"
					  ShowGridLines="False">

					<TextBlock Text="История Школ"
							   FontWeight="Bold"
							   Grid.Row="0"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"/>

					<ListBox Name="ListBox_HistorySchool"
							 Margin="5 0 5 0"
							 Grid.Row="1"
							 CornerRadius="10"
							 BorderThickness="2"
							 BorderBrush="Gray">

						<ListBox.ItemTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal" Margin="5">

									<TextBlock Text="{Binding SchoolNavigation.Name}"
											   TextWrapping="Wrap"
											   Margin="0 0 10 0"/>

									<TextBlock Text=" - Дата:"
											   FontWeight="Bold"
											   TextWrapping="Wrap"
											   Margin="0 0 10 0"/>

									<TextBlock Text="{Binding ChangeDate, StringFormat='{}{0:dd.MM.yyyy}'}"
											   TextWrapping="Wrap"/>

								</StackPanel>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>


					<Button Margin="0 0 10 0"
							Grid.Row="2"
							HorizontalAlignment="Right"
							VerticalAlignment="Center"
							Click="Button_Click_ClearHistorySchool">
						<TextBlock Text="Очистить"
								   HorizontalAlignment="Center"
								   VerticalAlignment="Center"/>
					</Button>

				</Grid>

			</DockPanel>

		</Border>

		<Border BorderThickness="2"
				Background="#D4F5F7"
				BorderBrush="Gray"
				Grid.Column="1"
				Grid.Row="3"
				Grid.ColumnSpan="1"
				Grid.RowSpan="1"
				Margin="0 0 5 0"
				CornerRadius="10">

			<Grid RowDefinitions="0.5*,4*,0.7*"
				  ShowGridLines="False">

				<TextBlock Text="История Классов"
						   FontWeight="Bold"
						   Grid.Row="0"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>

				<ListBox Name="ListBox_HistoryClass"
						 Margin="5 0 5 0"
						 Grid.Row="1"
						 CornerRadius="10"
						 BorderThickness="2"
						 BorderBrush="Gray">

					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal" Margin="5">

								<TextBlock Text="Класс "
										   TextWrapping="Wrap"
										   FontWeight="Bold"
										   Margin="0 0 10 0"/>

								<TextBlock Text="{Binding ClassNavigation.ClassesNumber}"
										   TextWrapping="Wrap"
										   Margin="0 0 10 0"/>

								<TextBlock Text=" - Дата:"
										   FontWeight="Bold"
										   TextWrapping="Wrap"
										   Margin="0 0 10 0"/>

								<TextBlock Text="{Binding ChangeDate, StringFormat='{}{0:dd.MM.yyyy}'}"
										   TextWrapping="Wrap"/>

							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>

				<Button Margin="0 0 10 0"
						Grid.Row="2"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						Click="Button_Click_ClearHistoryClass">
					<TextBlock Text="Очистить"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"/>
				</Button>

			</Grid>

		</Border>

	</Grid>
</Window>
