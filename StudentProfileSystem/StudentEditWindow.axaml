<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1300" d:DesignHeight="900"
		MaxWidth="1300" MaxHeight="900"
		WindowState="Normal"
		x:CompileBindings="False"
        x:Class="StudentProfileSystem.StudentEditWindow"
        Title="">

	<Grid ShowGridLines="True"
		  Name="OkkoRedactAdd"
		  ColumnDefinitions="0.2*,*,*,*,*,0.2*"
		  RowDefinitions="0.2*,*,*,*,0.2*">

		<DockPanel HorizontalAlignment="Left"
				   VerticalAlignment="Bottom"
				   Margin="20 0 0 10"
				   Grid.ColumnSpan="2"
				   Grid.Column="0"
				   Grid.Row="3"
				   Grid.RowSpan="2">

			<Button Name="Exit"
					Click="Button_Click_Close">
				<TextBlock Text="Закрыть"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

		</DockPanel>

		

	</Grid>
</Window>
