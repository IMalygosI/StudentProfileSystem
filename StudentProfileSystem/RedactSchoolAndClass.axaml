<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="400"
		MaxWidth="1000" MaxHeight="400"
		WindowState="Normal"
		x:CompileBindings="False"
        x:Class="StudentProfileSystem.RedactSchoolAndClass"
        Title="RedactSchoolAndClass">

	<Grid ShowGridLines="False"
		  Name="SchoolAndClass"
		  ColumnDefinitions="0.2*,*,*,0.2*"
		  RowDefinitions="0.2*,*,0.2*">

		<Border Grid.Column="1"
				Grid.Row="1"
				Grid.RowSpan="1"
				Grid.ColumnSpan="2"
				IsVisible="False"
				BorderThickness="2"
				BorderBrush="Gray"
				CornerRadius="20"
				Name="BorderRedactSchool">

			<ListBox Grid.Column="0"
					 Grid.Row="3"
					 Grid.ColumnSpan="2"
					 Name="ListBox_RedactSchool"
					 DoubleTapped="ListBox_DoubleTapped_School"
					 Margin="10"
					 CornerRadius="10"
					 BorderThickness="2"
					 BorderBrush="Gray">

				<ListBox.ContextMenu>
					<ContextMenu Background="#FFF8E1">
						<MenuItem Header="Удалить"
								  Click="MenuItem_Click_Delete_School"/>
					</ContextMenu>
				</ListBox.ContextMenu>

				<ListBox.ItemTemplate>
					<DataTemplate>

						<Border BorderThickness="2"
								BorderBrush="Gray"
								CornerRadius="10"
								Background="#E8F5E9">
							
							<Grid ColumnDefinitions="*"
								  RowDefinitions="*"
								  Margin="10">

								<StackPanel>

									<DockPanel Margin="5 10 0 0">

										<TextBlock Text="Школа:"
												   Margin="5 0 0 0"/>
										<TextBlock Text="{Binding Name}"
												   Margin="5 0 0 0"/>

									</DockPanel>

									<DockPanel Margin="5 10 0 0">

										<TextBlock Text="Номер школы:"
												   Margin="5 0 0 0"/>
										<TextBlock Text="{Binding SchoolNumber}"
												   Margin="5 0 0 0"/>

									</DockPanel>

									<DockPanel Margin="5 10 0 0">

										<TextBlock Text="Район школы:"
												   Margin="5 0 0 0"/>
										<TextBlock Text="{Binding District}"
												   Margin="5 0 0 0"/>

									</DockPanel>

									<DockPanel Margin="5 10 0 0">

										<TextBlock Text="Город школы:"
												   Margin="5 0 0 0"/>
										<TextBlock Text="{Binding City}"
												   Margin="5 0 0 0"/>

									</DockPanel>

								</StackPanel>

							</Grid>

						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
			
		</Border>

		<Border Grid.Column="1"
				Grid.Row="1"
				Grid.RowSpan="1"
				Grid.ColumnSpan="2"
				IsVisible="False"
				BorderThickness="2"
				BorderBrush="Gray"
				CornerRadius="20"
				Name="BorderRedactClass">

			<ListBox Grid.Column="0"
					 Grid.Row="3"
					 Grid.ColumnSpan="2"
					 Name="ListBox_RedactClass"
					 DoubleTapped="ListBox_DoubleTapped_Class"
					 Margin="10"
					 CornerRadius="10"
					 BorderThickness="2"
					 BorderBrush="Gray">

				<ListBox.ContextMenu>
					<ContextMenu Background="#FFF8E1">
						<MenuItem Header="Удалить"
								  Click="MenuItem_Click_Delete_Class"/>
					</ContextMenu>
				</ListBox.ContextMenu>

				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border BorderThickness="2"
								BorderBrush="Gray"
								CornerRadius="10"
								Height="40"
								Background="#E8F5E9">
							
							<StackPanel Orientation="Horizontal"
										VerticalAlignment="Center">

								<TextBlock Text="Номер класса:"
										   Margin="5 0 0 0"/>

								<TextBlock Text="{Binding ClassesNumber}"
										   Margin="5 0 0 0"/>

							</StackPanel>

						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>

		</Border>

		<DockPanel HorizontalAlignment="Left"
				   VerticalAlignment="Center"
				   Grid.ColumnSpan="2"
				   Grid.Column="0"
				   Grid.Row="2"
				   Margin="10 0 0 0">

			<Button Name="Button_Add_Class"
					IsVisible="False"
					Click="Button_Click_Add_Class">
				<TextBlock Text="Добавить класс"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

			<Button Name="Button_Add_School"
					IsVisible="False"
					Click="Button_Click_Add_School">
				<TextBlock Text="Добавить школу"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

			<Button Name="Button_Close"
					Margin="5 0 0 0"
					Click="Button_Click_Close">
				<TextBlock Text="Закрыть"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</Button>

		</DockPanel>

	</Grid>
</Window>
